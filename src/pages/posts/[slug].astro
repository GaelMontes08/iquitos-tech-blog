---
import Layout from "../../layouts/Layout.astro";
import { getPostInfo } from '../../lib/wp';
import { incrementPostViewCount } from '../../lib/views';

const slug = Astro.params.slug;
if (!slug) return Astro.redirect('/404');

const { title, content, date, seo } = await getPostInfo(slug);

// Automatically increment view count for this post (server-side)
console.log(`ðŸ“Š Incrementing view count for post: ${slug}`);
const currentViews = await incrementPostViewCount(slug);
console.log(`ðŸ“Š Current view count for ${slug}: ${currentViews}`);

export const prerender = false;
---

<Layout 
  title={title}
  description={seo.description}
>
  <article class="max-w-4xl mx-auto px-4 py-8">
    <!-- Article Header -->
    <header class="mb-8">
      <h1 class="text-4xl lg:text-5xl font-bold text-white mb-4">{title}</h1>
      
      <!-- Article Meta -->
      <div class="flex items-center justify-between text-gray-400 text-sm mb-6">
        <div class="flex items-center space-x-4">
          <time datetime={date}>
            {new Date(date).toLocaleDateString('es-ES', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </time>
          <span>â€¢</span>
          <span id="reading-time">5 min de lectura</span>
        </div>
        
        <!-- View Counter -->
        <div class="flex items-center space-x-2 text-gray-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          <span id="view-count">{currentViews} vista{currentViews === 1 ? '' : 's'}</span>
        </div>
      </div>
    </header>

    <!-- Article Content -->
    <div class="prose prose-lg prose-invert max-w-none" set:html={content} />
  </article>

  <!-- Reading Time Calculator -->
  <script>
    // Calculate reading time
    function calculateReadingTime() {
      const article = document.querySelector('.prose');
      if (article) {
        const text = article.textContent || '';
        const wordsPerMinute = 200;
        const words = text.trim().split(/\s+/).length;
        const readingTime = Math.ceil(words / wordsPerMinute);
        
        const readingTimeElement = document.getElementById('reading-time');
        if (readingTimeElement) {
          readingTimeElement.textContent = `${readingTime} min de lectura`;
        }
      }
    }

    // Initialize when DOM is loaded
    document.addEventListener('DOMContentLoaded', () => {
      calculateReadingTime();
    });
  </script>
</Layout>

