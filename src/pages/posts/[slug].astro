    line-height: 1.6;
  }
  
  .prose a {
    color: #2847d7;
    transition: color 0.2s;
  }

  .prose a:hover {
    color: #3b82f6;
  }
  
  .prose ul, .prose ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose blockquote {
    border-left: 4px solid #2847d7;
    padding-left: 1rem;
    font-style: italic;
    color: #9ca3af;
    margin: 1.5rem 0;
  }
  
  .prose img {
    border-radius: 0.5rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    margin: 1.5rem 0;
