    }
    50% {
      opacity: 0.8;
    }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  /* Prevent text selection on decorative elements */
  .select-none {
    -webkit-user-select: none;
    -moz-user-select: none;
