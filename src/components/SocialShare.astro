<script>
document.addEventListener('DOMContentLoaded', function() {
  const copyBtn = document.getElementById('copy-link-btn');
  const copyText = document.getElementById('copy-text');
  
  if (copyBtn && copyText) {
    copyBtn.addEventListener('click', async function() {
      const url = this.dataset.url;
      
      if (!url) {
        console.error('No URL found for copying');
        return;
      }
      
      try {
        if (navigator.clipboard && navigator.clipboard.writeText) {
          await navigator.clipboard.writeText(url);
        } else {
          const textArea = document.createElement('textarea');
          textArea.value = url;
          textArea.style.position = 'fixed';
          textArea.style.left = '-999999px';
          textArea.style.top = '-999999px';
          document.body.appendChild(textArea);
          textArea.focus();
          textArea.select();
          document.execCommand('copy');
          textArea.remove();
        }
        
        copyText.textContent = 'Â¡Copiado!';
        copyBtn.classList.add('copied');
        
        setTimeout(() => {
          copyText.textContent = 'Copiar';
          copyBtn.classList.remove('copied');
        }, 2000);
        
        console.log('ðŸ“‹ Link copied to clipboard');
        
      } catch (err) {
        console.error('Error copying to clipboard:', err);
        copyText.textContent = 'Error';
        setTimeout(() => {
          copyText.textContent = 'Copiar';
        }, 2000);
      }
    });
  }

  const socialBtns = document.querySelectorAll('[data-social]');
  socialBtns.forEach(btn => {
    btn.addEventListener('click', function(this: HTMLElement) {
      const platform = this.dataset.social;
      const isExternalLink = this.tagName.toLowerCase() === 'a';
      
      console.log(`ðŸ“Š Social share clicked: ${platform}`);
      
      if (isExternalLink && platform !== 'copy') {
        this.style.transform = 'scale(0.95)';
        setTimeout(() => {
          this.style.transform = '';
        }, 150);
      }
      
      if (typeof gtag !== 'undefined') {
        gtag('event', 'share', {
          method: platform,
          content_type: 'article'
        });
      }
      
      if (typeof window !== 'undefined' && (window as any).analytics) {
        (window as any).analytics.track('Article Shared', {
          platform: platform,
          url: window.location.href
        });
      }
    });
  });

  socialBtns.forEach(btn => {
    btn.addEventListener('mouseenter', function(this: HTMLElement) {
      this.style.transform = 'translateY(-2px)';
    });
    
    btn.addEventListener('mouseleave', function(this: HTMLElement) {
      this.style.transform = '';
    });
  });
});
</script>

<style>
  .social-share-btn {
    display: flex;
