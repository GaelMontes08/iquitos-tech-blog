    box-shadow: 0 4px 15px rgba(37, 211, 102, 0.3);
  }

  .social-share-btn[data-social="telegram"] {
    background: linear-gradient(135deg, #0088cc 0%, #007bb5 100%);
    box-shadow: 0 4px 15px rgba(0, 136, 204, 0.3);
  }

  .social-share-btn[data-social="email"] {
    background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
    box-shadow: 0 4px 15px rgba(107, 114, 128, 0.3);
  }

  .social-share-btn[data-social="copy"] {
    background: linear-gradient(135deg, #374151 0%, #1f2937 100%);
    box-shadow: 0 4px 15px rgba(55, 65, 81, 0.3);
  }

  /* Active state animations */
  .social-share-btn:active {
    transform: scale(0.95) !important;
  }

  /* Success state for copy button */
  .social-share-btn.copied {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%) !important;
    box-shadow: 0 4px 15px rgba(16, 185, 129, 0.4) !important;
  }

  /* Accessibility improvements */
  @media (prefers-reduced-motion: reduce) {
    .social-share-btn,
    .social-share-btn::before,
    .social-share-btn::after {
      transition: none !important;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .social-share-btn {
      border-width: 2px !important;
    }
  }
</style>
