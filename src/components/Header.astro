<script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const searchButton = document.getElementById('search-button');
    const mobileSearchButton = document.getElementById('mobile-search-button');
    const searchModal = document.getElementById('search-modal');
    const closeSearchModal = document.getElementById('close-search-modal');
    const modalSearchInput = document.getElementById('modal-search-input') as HTMLInputElement;
    const modalSearchButton = document.getElementById('modal-search-button');
    const modalSearchResults = document.getElementById('modal-search-results');

    mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
        
        const icon = mobileMenuButton?.querySelector('svg');
        if (icon) {
            const isOpen = !mobileMenu?.classList.contains('hidden');
            icon.innerHTML = isOpen 
                ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>'
                : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
        }
    });

    function openSearchModal() {
        searchModal?.classList.remove('hidden');
        modalSearchInput?.focus();
        document.body.style.overflow = 'hidden';
    }

    function closeSearchModalFunc() {
        searchModal?.classList.add('hidden');
        if (modalSearchInput) modalSearchInput.value = '';
        modalSearchResults?.classList.add('hidden');
        document.body.style.overflow = '';
    }

    searchButton?.addEventListener('click', openSearchModal);
    mobileSearchButton?.addEventListener('click', () => {
        mobileMenu?.classList.add('hidden');
        openSearchModal();
    });

    closeSearchModal?.addEventListener('click', closeSearchModalFunc);
    
    searchModal?.addEventListener('click', (e) => {
        if (e.target === searchModal) {
            closeSearchModalFunc();
        }
    });

    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !searchModal?.classList.contains('hidden')) {
            closeSearchModalFunc();
        }
    });

    let searchTimeout: number | undefined;
    const searchCache = new Map<string, any>();

    async function performModalSearch(query: string) {
        if (!query || query.length < 2) {
            modalSearchResults?.classList.add('hidden');
            return;
        }

        if (searchCache.has(query)) {
            displayModalResults(searchCache.get(query));
            return;
        }

        try {
            const response = await fetch(`/api/search?q=${encodeURIComponent(query)}&limit=5`);
            if (response.ok) {
                const data = await response.json();
                if (data.success) {
                    searchCache.set(query, data);
                    displayModalResults(data);
                }
            }
        } catch (error) {
            console.error('Search error:', error);
        }
    }

    function displayModalResults(data: any) {
        if (!modalSearchResults) return;

        if (!data.results || data.results.length === 0) {
            modalSearchResults.innerHTML = `
                <div class="p-4 text-center text-gray-500">
                    No se encontraron resultados
                </div>
            `;
            modalSearchResults.classList.remove('hidden');
            return;
        }

        const html = data.results.map((result: any) => `
            <a href="${result.url}" class="block p-3 hover:bg-gray-900 border-b border-gray-100 last:border-b-0">
                <div class="flex items-start space-x-3">
                    <div class="text-lg">${result.type === 'category' ? '📁' : '📄'}</div>
                    <div class="flex-1 min-w-0">
                        <h4 class="text-sm font-medium text-white truncate">${result.title}</h4>
                        <p class="text-xs text-gray-500 mt-1 line-clamp-2">${result.excerpt}</p>
                        <div class="flex items-center mt-1 space-x-2">
                            <span class="text-xs text-blue-600">${result.type === 'category' ? 'Categoría' : 'Artículo'}</span>
                            ${result.date ? `<span class="text-xs text-gray-400">${new Date(result.date).toLocaleDateString('es-ES')}</span>` : ''}
                        </div>
                    </div>
                </div>
            </a>
        `).join('');

        modalSearchResults.innerHTML = html;
        modalSearchResults.classList.remove('hidden');
    }

    modalSearchInput?.addEventListener('input', (e) => {
        const target = e.target as HTMLInputElement;
        const query = target.value.trim();
        
        if (searchTimeout) clearTimeout(searchTimeout);
        searchTimeout = window.setTimeout(() => {
            performModalSearch(query);
        }, 300);
    });

    function executeSearch() {
        const query = modalSearchInput?.value.trim();
        if (query) {
            window.location.href = `/search?q=${encodeURIComponent(query)}`;
        }
    }

    modalSearchButton?.addEventListener('click', executeSearch);
    modalSearchInput?.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') {
            e.preventDefault();
            executeSearch();
        }
    });

    document.querySelectorAll('.search-suggestion').forEach(button => {
        button.addEventListener('click', (e) => {
            const target = e.target as HTMLElement;
            const query = target.dataset.query;
            if (query) {
                window.location.href = `/search?q=${encodeURIComponent(query)}`;
            }
        });
    });
    
    document.addEventListener('click', (e) => {
        const nav = document.querySelector('nav');
        const target = e.target as Node;
        if (!nav?.contains(target) && !searchModal?.contains(target)) {
            mobileMenu?.classList.add('hidden');
            
            const icon = mobileMenuButton?.querySelector('svg');
            if (icon) {
                icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
            }
        }
    });
</script>

