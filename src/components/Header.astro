import { fetchWithTimeout } from '../lib/wp';

const domain = import.meta.env.WP_DOMAIN;
type Category = {
  id?: number;
  name: string;
  slug: string;
  count?: number;
};

const fetchNavigationCategories = async (): Promise<Category[]> => {
  try {
    if (!domain) {
      console.warn('WP_DOMAIN not configured, using fallback categories');
      return [
        { slug: 'tecnologia', name: 'Tecnología' },
        { slug: 'videojuegos', name: 'Videojuegos' },
        { slug: 'programacion', name: 'Programación' },
        { slug: 'reviews', name: 'Reviews' },
        { slug: 'guias', name: 'Guías' }
      ];
    }

    const response = await fetchWithTimeout(
      `https://${domain}/wp-json/wp/v2/categories?per_page=10&_fields=id,name,slug,count&orderby=count&order=desc`,
      {},
      8000
    );

    if (!response.ok) {
      throw new Error(`Categories API error: ${response.status}`);
    }

    const categories: Category[] = await response.json();
    
    return categories
      .filter((cat: Category) => 
        (cat.count ?? 0) > 0 && 
        cat.slug !== 'uncategorized' && 
        cat.id !== 25
      )
      .slice(0, 5);

  } catch (error) {
    console.error('Error fetching navigation categories:', error);
    return [
      { slug: 'tecnologia', name: 'Tecnología' },
      { slug: 'videojuegos', name: 'Videojuegos' },
      { slug: 'programacion', name: 'Programación' },
      { slug: 'reviews', name: 'Reviews' },
      { slug: 'guias', name: 'Guías' }
    ];
  }
};

const categories = await fetchNavigationCategories();
