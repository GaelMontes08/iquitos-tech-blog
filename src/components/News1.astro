              {item.description && (
                <div class="text-gray-400 text-xs sm:text-sm mb-3 line-clamp-2" set:html={item.description} />
              )}
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <img 
                    src={item.author.avatar} 
                    alt={item.author.name}
                    class="w-6 h-6 rounded-full object-cover"
                  />
                  <span class="text-gray-300 text-xs sm:text-sm truncate">{item.author.name}</span>
                </div>
                <div class="p-1.5 bg-[#2847d7] rounded-full hover:bg-blue-700 transition-colors flex-shrink-0">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </article>
        </a>
      ))}
    </div>

    <!-- Second Featured Card (Full Width) -->
    {secondSection.length > 0 && (
      <a href={`/posts/${secondSection[0].slug}`} class="block relative bg-[#1a1a1a] rounded-xl overflow-hidden border border-[#313131] hover:border-[#2847d7] hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-300 ease-in-out group">
        <article class="relative">
          <div class="relative h-48 sm:h-56 overflow-hidden">
            {secondSection[0].image ? (
              <img 
                src={secondSection[0].image} 
                alt={secondSection[0].title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            ) : (
              <div class="w-full h-full bg-gray-700 flex items-center justify-center">
                <span class="text-gray-400">No Image</span>
              </div>
            )}
            <div class={`absolute top-3 left-3 ${getCategoryColor(secondSection[0].category)} text-white text-xs px-2 py-1 rounded-full font-medium`}>
              {secondSection[0].category}
            </div>
          </div>
          <div class="p-4">
            <h3 class="text-white font-bold text-lg sm:text-xl mb-2 group-hover:text-[#2847d7] transition-colors line-clamp-2">
              {secondSection[0].title}
            </h3>
            {secondSection[0].description && (
              <div class="text-gray-400 text-sm mb-4 line-clamp-3" set:html={secondSection[0].description} />
            )}
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-2">
                <img 
                  src={secondSection[0].author.avatar} 
                  alt={secondSection[0].author.name}
                  class="w-8 h-8 rounded-full object-cover"
                />
                <span class="text-gray-300 text-sm">{secondSection[0].author.name}</span>
              </div>
              <div class="p-2 bg-[#2847d7] rounded-full hover:bg-blue-700 transition-colors">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </div>
        </article>
      </a>
    )}

    <!-- Grid of second section smaller cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {secondSection.slice(1).map((item: typeof newsItems[0]) => (
        <a href={`/posts/${item.slug}`} class="block relative bg-[#1a1a1a] rounded-xl overflow-hidden border border-[#313131] hover:border-[#2847d7] hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-300 ease-in-out group">
          <article class="relative">
            <div class="relative h-40 sm:h-48 overflow-hidden">
              {item.image ? (
                <img 
                  src={item.image} 
                  alt={item.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
              ) : (
                <div class="w-full h-full bg-gray-700 flex items-center justify-center">
                  <span class="text-gray-400 text-xs">No Image</span>
                </div>
              )}
              <div class={`absolute top-2 left-2 ${getCategoryColor(item.category)} text-white text-xs px-1.5 py-0.5 rounded-full font-medium`}>
                {item.category}
              </div>
            </div>
            <div class="p-3">
              <h3 class="text-white font-bold text-sm sm:text-base mb-2 line-clamp-2 group-hover:text-[#2847d7] transition-colors">
                {item.title}
              </h3>
              {item.description && (
                <div class="text-gray-400 text-xs sm:text-sm mb-3 line-clamp-2" set:html={item.description} />
              )}
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <img 
                    src={item.author.avatar} 
                    alt={item.author.name}
                    class="w-6 h-6 rounded-full object-cover"
                  />
                  <span class="text-gray-300 text-xs sm:text-sm truncate">{item.author.name}</span>
                </div>
                <div class="p-1.5 bg-[#2847d7] rounded-full hover:bg-blue-700 transition-colors flex-shrink-0">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </article>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>