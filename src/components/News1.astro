              <img 
                src={secondSection[0].image} 
                alt={secondSection[0].title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
              <div class={`absolute top-3 left-3 ${getCategoryColor(secondSection[0].category)} text-white text-xs px-2 py-1 rounded-full font-medium`}>
                {secondSection[0].category}
              </div>
            </div>
            <div class="p-4 flex flex-col h-[calc(100%-12rem)]">
              <h3 class="text-white font-bold text-xl lg:text-2xl mb-2 line-clamp-2 transition-colors">
                {secondSection[0].title}
              </h3>
              <div class="text-gray-400 text-sm mb-4 line-clamp-3 flex-grow" set:html={secondSection[0].description} />
            </div>
          </article>
        </a>
      )}
    </div>
  </div>

  <!-- Mobile Layout -->
  <div class="lg:hidden px-4 space-y-6">
    <!-- First Featured Card (Full Width) -->
    {firstSection.length > 0 && (
      <a href={`/posts/${firstSection[0].slug}`} class="block relative bg-[#1a1a1a] rounded-xl overflow-hidden border border-[#313131] hover:border-[#2847d7] hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-300 ease-in-out group">
        <article class="relative">
          <div class="relative h-48 sm:h-56 overflow-hidden">
            {firstSection[0].image ? (
              <img 
                src={firstSection[0].image} 
                alt={firstSection[0].title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
