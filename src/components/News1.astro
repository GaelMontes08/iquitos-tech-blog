---
import { getLatestsPosts } from '@/lib/wp';

// Fetch posts from WordPress
const posts = await getLatestsPosts({ perPage: 10 });

// Transform WordPress posts to match the expected structure
const newsItems = posts.map((post: any, index: number) => ({
  id: post.id,
  slug: post.slug,
  title: post.title,
  description: post.excerpt,
  category: post.categories?.[0]?.name || 'Technology',
  image: post.featuredImage,
  author: {
    name: post.author || 'Redacción',
    avatar: post.authorAvatar || "/author.jpg"
  },
  featured: index === 0 || index === 5 // First item of each section is featured
}));

const getCategoryColor = (category: string) => {
  const colors: Record<string, string> = {
    'Technology': 'bg-blue-600',
    'Gaming': 'bg-purple-600',
    'AI': 'bg-green-600',
    'Mobile News': 'bg-orange-600',
    'Tecnología': 'bg-blue-600',
    'Videojuegos': 'bg-purple-600',
    'Inteligencia Artificial': 'bg-green-600',
    'Móviles': 'bg-orange-600'
  };
  return colors[category] || 'bg-gray-600';
};

// Split news into two sections
const firstSection = newsItems.slice(0, 5);
const secondSection = newsItems.slice(5, 10);
---

<section class="w-full py-8 lg:py-12 px-4">
  <div class="mb-8">
    <h2 class="text-3xl lg:text-4xl font-bold text-white mb-2 lg:ml-0">Últimas Noticias</h2>
    <p class="text-gray-400 lg:ml-0">Mantente al día con las últimas tendencias en tecnología y gaming</p>
  </div>

  <!-- Desktop Layout -->
  <div class="hidden lg:block space-y-12">
    
    <!-- First Section: Featured card on LEFT -->
    <div class="grid grid-cols-4 gap-6 h-[400px]">
      <!-- Featured card (spans 2 columns) -->
      {firstSection.length > 0 && (
        <a href={`/posts/${firstSection[0].slug}`} class="col-span-2 relative bg-[#1a1a1a] rounded-xl overflow-hidden border border-[#313131] hover:border-[#2847d7] hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-300 ease-in-out group cursor-pointer h-full">
          <article class="relative h-full">
            <div class="relative h-84 overflow-hidden">
              <img 
                src={firstSection[0].image} 
                alt={firstSection[0].title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
              <div class={`absolute top-3 left-3 ${getCategoryColor(firstSection[0].category)} text-white text-xs px-2 py-1 rounded-full font-medium`}>
                {firstSection[0].category}
              </div>
            </div>
            <div class="p-4 flex flex-col h-[calc(100%-12rem)]">
              <h3 class="text-white font-bold text-xl lg:text-2xl mb-2 line-clamp-2 transition-colors">
                {firstSection[0].title}
              </h3>
              <div class="text-gray-400 text-sm mb-4 line-clamp-3 flex-grow" set:html={firstSection[0].description} />
            </div>
          </article>
        </a>
      )}

      <!-- Right side: 4 smaller cards in 2x2 grid -->
      <div class="col-span-2 grid grid-cols-2 gap-6 h-full">
        {firstSection.slice(1).map((item: typeof newsItems[0]) => (
          <a href={`/posts/${item.slug}`} class="relative bg-[#1a1a1a] rounded-xl overflow-hidden border border-[#313131] hover:border-[#2847d7] hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-300 ease-in-out group cursor-pointer h-full">
            <article class="relative h-full">
              <div class="relative h-48 overflow-hidden">
                <img 
                  src={item.image} 
                  alt={item.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
                <div class={`absolute top-2 left-2 ${getCategoryColor(item.category)} text-white text-xs px-1.5 py-0.5 rounded-full font-medium`}>
                  {item.category}
                </div>
              </div>
              <div class="p-3 flex flex-col h-[calc(100%-6rem)]">
                <h3 class="text-white font-bold text-md mb-2 line-clamp-2 transition-colors">
                  {item.title}
                </h3>
                <div class="flex items-center justify-between mt-auto">
                  <div class="flex items-center space-x-2">
                    <img 
                      src={item.author.avatar} 
                      alt={item.author.name}
                      class="w-6 h-6 rounded-full object-cover"
                    />
                    <span class="text-gray-300 text-xs truncate">{item.author.name}</span>
                  </div>
                </div>
              </div>
            </article>
          </a>
        ))}
      </div>
    </div>

    <!-- Second Section: Featured card on RIGHT -->
    <div class="grid grid-cols-4 gap-6 h-[400px] mt-[250px] mb-[150px]">
